{
  "dependencies": {
    "next": "^12.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@swc-node/register": "^1.4.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.8.0",
    "eslint-config-next": "^12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "prettier": "^2.5.1",
    "riteway": "^6.3.1",
    "tap-nirvana": "^1.1.0"
  },
  "name": "riteway-swc-example",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "test": "SWC_NODE_PROJECT=./jsconfig.json riteway -r @swc-node/register src/**/*.test.js | tap-nirvana",
    "test:absolute-import": "SWC_NODE_PROJECT=./jsconfig.json riteway -r @swc-node/register src/home/no-css-absolute-imports-component.test.js | tap-nirvana",
    "test:css": "SWC_NODE_PROJECT=./jsconfig.json riteway -r @swc-node/register src/home/with-css-component.test.js | tap-nirvana",
    "test:identity": "SWC_NODE_PROJECT=./jsconfig.json riteway -r @swc-node/register src/utils/identity.test.js | tap-nirvana",
    "test:no-absolute-import-and-react": "SWC_NODE_PROJECT=./jsconfig.json riteway -r @swc-node/register src/home/no-css-relative-imports-component.test.js | tap-nirvana",
    "test:watch": "chokidar \"**/*.js\" -i \"node_modules/\" -c \"yarn test\""
  }
}